{
  "name": "dimicall-electron",
  "private": true,
  "version": "2..0.1",
  "description": "Application de gestion de contacts DimiCall",
  "author": "Dimultra",
  "main": "./dist/main/main.js",
  "homepage": "./",
  "type": "module",
  "scripts": {
    "dev": "electron-vite dev",
    "prebuild": "electron-vite build",
    "build": "electron-vite build",
    "postinstall": "electron-builder install-app-deps",
    "start": "electron-vite preview",
    "dist": "npm run build && electron-builder",
    "dist:win": "npm run build && electron-builder --win",
    "dist:mac": "npm run build && electron-builder --mac",
    "dist:linux": "npm run build && electron-builder --linux",
    "test:sim": "node scripts/test-sim-selection.js",
    "test:update": "node scripts/test-update.cjs",
    "analyze:xml": "node scripts/test-xml-analysis.cjs",
    "generate-icons": "electron-icon-builder --input=DDD.png --output=build --flatten",
    "publish": "npm run build && electron-builder --publish always"
  },
  "dependencies": {
    "@calcom/embed-react": "^1.5.3",
    "@hookform/resolvers": "^5.1.1",
    "@radix-ui/react-avatar": "^1.1.10",
    "@radix-ui/react-dialog": "^1.1.14",
    "@radix-ui/react-dropdown-menu": "2.1.15",
    "@radix-ui/react-icons": "^1.3.2",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-popover": "1.1.14",
    "@radix-ui/react-progress": "^1.1.7",
    "@radix-ui/react-scroll-area": "^1.2.9",
    "@radix-ui/react-select": "2.2.5",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-switch": "^1.2.5",
    "@radix-ui/react-tooltip": "^1.2.7",
    "@supabase/ssr": "^0.6.1",
    "@supabase/supabase-js": "^2.50.2",
    "@tailwindcss/vite": "^4.1.11",
    "@tanstack/react-table": "^8.21.3",
    "@tanstack/react-virtual": "^3.13.12",
    "@types/uuid": "^10.0.0",
    "@yume-chan/adb": "^2.1.0",
    "@yume-chan/adb-daemon-webusb": "^2.1.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "dotenv": "^17.0.0",
    "framer-motion": "^12.19.2",
    "lucide-react": "^0.525.0",
    "papaparse": "^5.5.3",
    "react": "^19.1.0",
    "react-day-picker": "^9.7.0",
    "react-dom": "^19.1.0",
    "react-hook-form": "^7.59.0",
    "react-resizable-panels": "^3.0.3",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "4.1.11",
    "tailwindcss-animate": "^1.0.7",
    "update-electron-app": "^3.1.1",
    "uuid": "^11.1.0",
    "web-vitals": "^5.0.3",
    "xlsx": "https://cdn.sheetjs.com/xlsx-0.20.3/xlsx-0.20.3.tgz",
    "zod": "^3.25.67"
  },
  "devDependencies": {
    "@electron-toolkit/utils": "^4.0.0",
    "@types/node": "^22.14.0",
    "@types/papaparse": "^5.3.16",
    "@types/react-dom": "^19.1.6",
    "@vitejs/plugin-react": "^4.6.0",
    "concurrently": "^9.2.0",
    "electron": "37.1.0",
    "electron-builder": "^26.0.12",
    "electron-icon-builder": "^2.0.1",
    "electron-vite": "4.0.0-beta.0",
    "typescript": "~5.8.3",
    "vite": "^7.0.0",
    "vite-plugin-javascript-obfuscator": "^3.1.0"
  },
  "overrides": {
    "@radix-ui/react-dismissable-layer": "1.1.8",
    "@radix-ui/react-focus-scope": "1.1.2",
    "@radix-ui/react-portal": "1.1.8"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/paul-kaczowka/DimiCall.git"
  },
  "build": {
    "publish": {
      "provider": "github",
      "owner": "paul-kaczowka",
      "repo": "DimiCall"
    },
    "appId": "com.dimultra.dimicall",
    "productName": "DimiCall",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "public/**/*",
      "build/**/*"
    ],
    "asarUnpack": [
      "dist/renderer/**/*"
    ],
    "extraResources": [
      {
        "from": "platform-tools-latest-windows (4)/platform-tools",
        "to": "platform-tools",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "platform-tools-latest-darwin (2)/platform-tools",
        "to": "platform-tools",
        "filter": [
          "**/*"
        ]
      }
    ],
    "mac": {
      "icon": "build/icon.icns",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ]
    },
    "win": {
      "icon": "build/icon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "extraFiles": [
        {
          "from": "node_modules/electron/dist/icudtl.dat",
          "to": "icudtl.dat"
        },
        {
          "from": "node_modules/electron/dist/*.pak",
          "to": "./"
        }
      ]
    },
    "nsis": {
      "oneClick": true,
      "perMachine": false,
      "allowToChangeInstallationDirectory": false,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "portable": {
      "artifactName": "${productName}-${version}-portable.${ext}",
      "unpackDirName": "DimiCall"
    }
  }
}
